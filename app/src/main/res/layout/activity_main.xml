<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relativeLayout_id"
    android:visibility="gone"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<com.airbnb.lottie.LottieAnimationView
    app:lottie_rawRes="@raw/food_delivery_animation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:lottie_autoPlay="true"
    app:lottie_loop="true">
</com.airbnb.lottie.LottieAnimationView>
    <TextView
        android:id="@+id/food_id"
        android:visibility="gone"
        android:textColor="#8C0707"
        android:text="Food"
        android:textSize="50sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:id="@+id/delivery_id"
        android:visibility="gone"
        android:gravity="center"
        android:layout_marginLeft="200dp"
        android:textColor="#8C0707"
        android:text="Delivery"
        android:fontFamily="cursive"
        android:textSize="50sp"
         android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:visibility="gone"
        android:textColor="#8C0707"
        android:layout_marginBottom="30dp"
        android:padding="5dp"
        android:layout_margin="3dp"
        android:layout_alignParentBottom="true"
        android:textSize="20sp"
         android:text="Splash screen | how to implement animation splash screen in android studio | animated splash screen"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

</RelativeLayout>